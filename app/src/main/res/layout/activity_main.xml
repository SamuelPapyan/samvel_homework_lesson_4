<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <include
        android:id="@+id/tool_bar"
        layout="@layout/tool_bar"/>
    <TextView
        android:id="@+id/textView1"
        android:layout_width="@dimen/the_340dp"
        android:layout_height="@dimen/th_60dp"
        style="@style/textViewStyle"
        android:text="@string/textView1"
        android:layout_marginTop="@dimen/the_16dp"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tool_bar" />
    <TextView
        android:id = "@+id/textView2"
        style="@style/textViewStyle"
        android:layout_width="@dimen/the_340dp"
        android:layout_height="@dimen/th_60dp"
        android:layout_marginTop="@dimen/the_16dp"
        app:layout_constraintTop_toBottomOf="@+id/textView1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="@string/textView2"
        />

    <TextView
        android:id="@+id/textView3"
        style="@style/textViewStyle"
        android:layout_width="@dimen/the_150dp"
        android:layout_height="@dimen/the_150dp"
        android:layout_marginTop="@dimen/the_10dp"
        android:text="@string/textView3"
        app:layout_constraintLeft_toLeftOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView4"
        style="@style/textViewStyle"
        android:text="@string/textView3"
        android:layout_width="@dimen/the_150dp"
        android:layout_height="@dimen/the_150dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView3"
        app:layout_constraintRight_toRightOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="@+id/textView3" />

</androidx.constraintlayout.widget.ConstraintLayout>